source 'https://rubygems.org'

# Cucumber for BDD testing
gem 'cucumber'

# Capybara for web application testing
gem 'capybara'

# Selenium WebDriver for browser automation
gem 'selenium-webdriver'

# RSpec for assertions and matchers
gem 'rspec'

# Web driver management
gem 'webdrivers'

# For better HTML reports
gem 'cucumber-html-formatter'

# For screenshots on failures
gem 'capybara-screenshot'

# For handling different environments
gem 'dotenv'

# Optional: For better formatting and debugging
gem 'pry'
gem 'pry-byebug'

group :development, :test do
  gem 'rubocop', require: false
  gem 'rubocop-cucumber', require: false
end
